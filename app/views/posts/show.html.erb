<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= current_user.email.split('@')[0] %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h1>Comments</h1>
<% unless @post.comments.size.zero? %>
  <table>
    <thead>
      <tr>
        <th>Body</th>
        <th>User</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @post.comments.each do |comment| %>
        <tr>
          <td><%= comment.body %></td>
          <td><%= comment.user_id %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <%= "It looks like there are no comments, why don't you create one!?" %>
<% end %>

<h1>Add a Comment</h1>
<%= form_for([@post, Comment.new]) do |f| %>
  <p>
    <%= f.text_area :body%>
  </p>
  <p>
    <%= f.submit%>
  </p>
<% end %>
